<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyCallFragment"
    android:background="@color/colorBackVoice">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lütfen telefonu sallayın"
        android:textColor="@color/colorMic"
        android:layout_above="@+id/btnEmergency"
        android:fontFamily="@font/cinzel"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:clickable="true"
        android:id="@+id/btnEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/emergency_call"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=" "
        />

</RelativeLayout>