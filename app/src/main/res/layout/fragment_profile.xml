                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="12.09.1994"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="2dp" />-->


        <!--Medeni Hali-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:layout_margin="2dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtMarriage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Marriage"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/txtMarriageis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="Bekar"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>






        <!--Cinsiyet-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@color/colorAccent"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/Gender"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtGenderis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="Kadın"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>




        <!--Kan Grubu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/txtBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/BloodGroup"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtBloodGroupis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="0 Rh +"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>